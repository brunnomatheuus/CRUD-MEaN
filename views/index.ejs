<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header class="bg-dark">
      <div class="col-100">
        <h1 class="color-white"><%= title %></h1>
      </div>
    </header>
    <section>
      <div class="col-30 bg-grey">
        <form class="" action="/add" method="post">
          <legend>Incluir nova tarefa</legend>
          <input type="text" name="title" placeholder="Título">
          <textarea name="description" rows="10" cols="30" placeholder="Descrição"></textarea>
          <button type="submit" name="button">+ adicionar</button>
        </form>
      </div>
      <div class="col-70">
        <table>
          <tbody>
            <% for(var i = 0; i < tasks.length; i++){ %>
            <tr>
              <td>#<%= i+1 %> <strong><%= tasks[i].title%></strong></td>
              <td class="actions">
                <a href="/turn/<%= tasks[i]._id%>" class="<%= tasks[i].status ? '' : 'color-red' %>">
                  <%= tasks[i].status ? 'ok' : 'not-ok' %>
                </a>
              </td>
              <td class="actions">
                <a href="/delete/<%= tasks[i]._id%>" class="color-red">
                  delete
                </a>
              </td>
              <td class="highlight"><%= tasks[i].description%></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>
